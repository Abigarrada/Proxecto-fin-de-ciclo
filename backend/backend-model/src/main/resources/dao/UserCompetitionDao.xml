<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="USERS_COMPETITIONS"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>UC_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>UC_ID</Column>
    </UpdateKeys>
    <Queries>
        <Query id="filter">
            <Sentence>
                <![CDATA[
                    WITH USER_COMPETITION AS
                        (SELECT  uc.UC_ID, uc.USER_, c.COMP_ID, c.COMP_NAME, c.COMP_DESCRIPTION
                        FROM ${mainschema}.USERS_COMPETITIONS uc
                        INNER JOIN COMPETITIONS c
                        ON c.COMP_ID = uc.COMP_ID)
                    SELECT #COLUMNS#
                    FROM USER_COMPETITION
                    #WHERE#
                    #ORDER#;
                ]]>
            </Sentence>
        </Query>
        <Query id="userCompetitionById">
            <Sentence>
                <![CDATA[
                    WITH USER_COMPETITION AS
                        (SELECT
                            UC.UC_ID,
                            UC.COMP_ID,
                            P1.PIL_NAME AS P1NAME,
                            P1.PIL_SURNAME AS P1SURNAME,
                            P2.pil_name,
                            P2.PIL_NAME AS P2NAME,
                            P2.PIL_SURNAME AS P2SURNAME,
                            T.TEAM_NAME,
                            UC.UC_AVAILABLE_MONEY,
                            UC.UC_POINTS
                            FROM
                            USERS_COMPETITIONS UC
                            LEFT JOIN PILOTS P1 ON
                            UC.PIL_ID_1 = P1.PIL_ID
                            LEFT JOIN PILOTS P2 ON
                            UC.PIL_ID_2 = P2.PIL_ID
                            LEFT JOIN TEAMS T ON
                            UC.TEAM_ID = T.TEAM_ID)
                    SELECT #COLUMNS#
                    FROM USER_COMPETITION
                    #WHERE#
                    #ORDER#;
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>